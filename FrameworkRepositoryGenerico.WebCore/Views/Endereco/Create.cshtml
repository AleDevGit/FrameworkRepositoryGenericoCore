@model FrameworkRepositoryGenerico.DataBase.Entidades.Endereco
@{
    ViewData["Title"] = "Create";
}

<br />
<h1>Create</h1>


<div class="row">
    <div class="col-md-11">
        <table class="table">
                <tr>
                    <td><h1><b>@ViewBag.Cliente.Nome</b> (@ViewBag.Cliente.Cpf_Cnpj) </h1></td>
                    
                </tr>
               
            </table>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Logradouro" class="control-label"></label>
                <input asp-for="Logradouro" class="form-control w-100" />
                <span asp-validation-for="Logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cep" class="control-label"></label>
                <input asp-for="Cep" class="form-control w-25" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uf" class="control-label"></label>
                <input asp-for="Uf" class="form-control w-25" />
                <span asp-validation-for="Uf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Municipio" class="control-label"></label>
                <input asp-for="Municipio" class="form-control w-50" />
                <span asp-validation-for="Municipio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control w-50" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ativo" class="control-label"></label>
                <br />
                <input type="radio" asp-for="Ativo" value="true"><label asp-for="Ativo" class="control-label">Sim</label>
                <input type="radio" asp-for="Ativo" value="false"><label asp-for="Ativo" class="control-label">Não</label>
                <span asp-validation-for="Ativo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

